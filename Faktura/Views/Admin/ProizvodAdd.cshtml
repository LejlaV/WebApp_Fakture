@using Fakture.ViewModels
@model ProizvodAddVM
@{
    ViewData["Title"] = "Add";
}

<h1>Dodavanje novog proizvoda</h1>
<form class="form-group" asp-controller="Admin" asp-action="ProizvodSave" method="post">

    <div class="form-group">
        <label>Naziv</label>
        <input type="text" asp-for="@Model.Naziv" class="form-control" />

    </div>

    <div class="form-group">
        <label>Cijena</label>
        <input type="number" asp-for="@Model.Cijena" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sifra</label>
        <input type="text" asp-for="@Model.Sifra" class="form-control" />
    </div>

    <input type="submit" value="Dodaj" class="btn btn-success" />
    
</form>