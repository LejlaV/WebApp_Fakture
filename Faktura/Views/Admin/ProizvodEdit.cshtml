@using Fakture.ViewModels
@model ProizvodAddVM
@{
    ViewData["Title"] = "Edit";
}

<h1>Dodavanje novog proizvoda</h1>
<form class="form-group" asp-controller="Admin" asp-action="ProizvodSaveEdit" method="post">
    <input asp-for="@Model.ProizvodId" hidden />
    <div class="form-group">
        <label>Naziv</label>
        <input type="text" asp-for="@Model.Naziv" class="form-control" />

    </div>

    <div class="form-group">
        <label>Cijena</label>
        <input type="text" asp-for="@Model.Cijena" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sifra</label>
        <input type="text" asp-for="@Model.Sifra" class="form-control" />
    </div>

    <input type="submit" value="Sacuvaj" class="btn btn-success" />

</form>